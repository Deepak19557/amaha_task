<h1>Your Tasks</h1>
<table class="table table-striped table-bordered table-hover friend_list">
    <thead class="thead-dark">
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.desc %></td>
          <td>
            <%= link_to 'new', new_task_path, class: 'btn btn-primary btn-sm mr-1' %>
            <%= link_to 'Show', task_path(task), class: 'btn btn-primary btn-sm mr-1' %>
            <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-secondary btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>